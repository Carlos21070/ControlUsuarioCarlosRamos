
@model ControlUsuarioCarlosRamos.Models.Usuario
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ Layout = "_Layout"; }
<main>
    <h1>Registrarse a la membresia UltimateFut</h1>
    <p>Para iniciar con la membresia necesitamos tus datos personales:</p>
    <form method="post" action="~/Home/Registrar">
        <input type="text" asp-for="Nombre" placeholder="Nombre UTfut" required />
        <br />
        <input type="email" asp-for="Correo" placeholder="Añada nuevo correo UTfut" required />
        <br />
        <input type="password" asp-for="Contrasena" name="contrasena" placeholder="Cree una contraseña UTfut" required />
        <br />
        <input type="password" asp-for="Contrasena" name="contrasena2" placeholder="Confirme su contraseña UTfut" required />
        @Html.ValidationSummary()
        <input type="submit" value="Comenzar" onclick="registrarUsuario()" />
        <br />
    </form>

    <p>
        ¿Ya tienes cuenta?
        <a href="~/Home/IniciarSesion">Inicia sesión</a>
    </p>
</main>